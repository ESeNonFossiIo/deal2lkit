#
# General information
#

SET(MATHLAB_PACKAGE_NAME "@MATHLAB_PACKAGE_NAME@")
SET(MATHLAB_PACKAGE_VERSION "@MATHLAB_PACKAGE_VERSION@")
SET(MATHLAB_PACKAGE_VENDOR "@MATHLAB_PACKAGE_VENDOR@")
SET(MATHLAB_PACKAGE_DESCRIPTION "@MATHLAB_PACKAGE_DESCRIPTION@")

SET(MATHLAB_VERSION_MAJOR "@MATHLAB_VERSION_MAJOR@")
SET(MATHLAB_VERSION_MINOR "@MATHLAB_VERSION_MINOR@")
SET(MATHLAB_VERSION "@MATHLAB_VERSION@")

SET(MATHLAB_PROJECT_CONFIG_NAME "@MATHLAB_PROJECT_CONFIG_NAME@")

SET(MATHLAB_BUILD_TYPE "@CMAKE_BUILD_TYPE@")
SET(MATHLAB_BUILD_TYPES "@MATHLAB_BUILD_TYPES@")


#
# Information about the project location
#

SET(MATHLAB_CMAKE_MACROS_RELDIR "@MATHLAB_CMAKE_MACROS_RELDIR@")
SET(MATHLAB_COMMON_RELDIR "@MATHLAB_COMMON_RELDIR@")
SET(MATHLAB_DOCREADME_RELDIR "@MATHLAB_DOCREADME_RELDIR@")
SET(MATHLAB_DOCHTML_RELDIR "@MATHLAB_DOCHTML_RELDIR@")
SET(MATHLAB_EXAMPLES_RELDIR "@MATHLAB_EXAMPLES_RELDIR@")
SET(MATHLAB_EXECUTABLE_RELDIR "@MATHLAB_EXECUTABLE_RELDIR@")
SET(MATHLAB_INCLUDE_RELDIR "@MATHLAB_INCLUDE_RELDIR@")
SET(MATHLAB_LIBRARY_RELDIR "@MATHLAB_LIBRARY_RELDIR@")
SET(MATHLAB_PROJECT_CONFIG_RELDIR "@MATHLAB_PROJECT_CONFIG_RELDIR@")

#
# Determine MATHLAB_PATH from CMAKE_CURRENT_LIST_DIR:
#

SET(MATHLAB_PATH "${CMAKE_CURRENT_LIST_DIR}")
SET(_path "${MATHLAB_PROJECT_CONFIG_RELDIR}")
WHILE(NOT "${_path}" STREQUAL "")
  GET_FILENAME_COMPONENT(MATHLAB_PATH "${MATHLAB_PATH}" PATH)
  GET_FILENAME_COMPONENT(_path "${_path}" PATH)
ENDWHILE()

#
# Print a message after inclusion of this file:
#

SET(MATHLAB_PROJECT_CONFIG_INCLUDED TRUE)

IF(NOT ${MATHLAB_PACKAGE_NAME}_FIND_QUIETLY)
  MESSAGE(STATUS
    "Using the ${MATHLAB_PACKAGE_NAME}-${MATHLAB_PACKAGE_VERSION} installation found at ${MATHLAB_PATH}"
    )
ENDIF()


#
# Include all convenience macros:
#

FILE(GLOB _macro_files
  "${MATHLAB_PATH}/cmake/macro_*.cmake"
  )
FOREACH(file ${_macro_files})
  IF(NOT ${MATHLAB_PACKAGE_NAME}_FIND_QUIETLY)
    MESSAGE(STATUS "Include macro ${file}")
  ENDIF()
  INCLUDE(${file})
ENDFOREACH()


#
# Compiler and linker configuration
#

SET(MATHLAB_CXX_COMPILER "@CMAKE_CXX_COMPILER@")

# used for all targets:
SET(MATHLAB_CXX_FLAGS "@CMAKE_CXX_FLAGS@")

# _additionally_ used for debug targets:
SET(MATHLAB_CXX_FLAGS_DEBUG "@DEAL_II_CXX_FLAGS_DEBUG@")

# _additionally_ used for release targets:
SET(MATHLAB_CXX_FLAGS_RELEASE "@DEAL_II_CXX_FLAGS_RELEASE@")

# used for all targets:
SET(MATHLAB_LINKER_FLAGS "@CMAKE_SHARED_LINKER_FLAGS@")

# _additionally_ used for debug targets:
SET(MATHLAB_LINKER_FLAGS_DEBUG "@DEAL_II_SHARED_LINKER_FLAGS_DEBUG@")

# _additionally_ used for release targets:
SET(MATHLAB_LINKER_FLAGS_RELEASE "@DEAL_II_SHARED_LINKER_FLAGS_RELEASE@")

#
# Information about include directories and libraries
#

SET(MATHLAB_INCLUDE_DIRS "@CONFIG_INCLUDE_DIRS@")

# Full list of libraries for the debug target:
SET(MATHLAB_LIBRARIES_DEBUG "@CONFIG_LIBRARIES_DEBUG@")

# Full list of libraries for the release target:
SET(MATHLAB_LIBRARIES_RELEASE "@CONFIG_LIBRARIES_RELEASE@")

# Full list of libraries with "debug" and "optimized" keywords for easy use with TARGET_LINK_LIBRARIES:
SET(MATHLAB_LIBRARIES "@CONFIG_LIBRARIES@")


